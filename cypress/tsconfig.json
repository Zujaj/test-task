{
    "compilerOptions": {
      "baseUrl": "./",
      "module": "ES2022",
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "target": "ES2022",
      "lib": [
        "ES2022",
        "DOM"
      ],
      "types": [
        "cypress",
        "node"
      ],
      "strict": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }